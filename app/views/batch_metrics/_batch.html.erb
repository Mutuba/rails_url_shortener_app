<div id="<%= dom_id batch %>">
  <div class="accordion" id="accordionExample">
    <div class="accordion-item">
      <h2 class="accordion-header" id="heading<%= batch.id %>">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne<%= batch.id %>" aria-expanded="true" aria-controls="collapseOne<%= batch.id %>">
          <p>Batch ID: <%= batch.id %></p>
        </button>
      </h2>
      <div id="collapseOne<%= batch.id %>" class="accordion-collapse collapse" aria-labelledby="heading<%= batch.id %>" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <div class="container">
            <div class="card">
              <div class="card-body">
                <% if batch.success_rate.nil? %>
                  <div class="alert alert-primary" role="alert">
                    Uploading!
                  </div>
                  <p>
                    <%= link_to "View Progress", batch_metrics_upload_status_path, class: "btn btn-primary" %>
                  </p>
                <% else %>
                  <p><strong>Batch name:</strong> <%= batch.name %></p>
                  <p><strong>Success Percentage:</strong> <%= batch.success_rate %></p>
                  <p><strong>Failed Count:</strong> <%= batch.failed_urls.size %></p>
                  <div class="d-flex justify-content-between">
                    <p>
                      <%= link_to "View Batch Urls", batch_metrics_batch_urls_path(id: batch.id), class: "btn btn-primary" %>
                    </p>
                    <p class="ml-auto">
                      <%= button_to "Delete Batch", batch_metric_path(id: batch.id), method: :delete, data: { confirm: "Are you sure you want to delete the batch?" }, class: "btn btn-danger" %>
                    </p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br/>
