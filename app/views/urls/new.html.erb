<div class="container d-flex align-items-center justify-content-center">
  <div class="upload-form">

    <%= form_for @url, url: urls_create_path do |f| %>
      <div class="form-group ">
        <%= f.label :file, "Upload CSV File" %>
        <%= f.file_field :file, accept: ".csv",  class: 'form-control-file'%>
      </div>
      <br/>
      <br/>
      <div class="actions">
        <%= f.button "Upload File", type: :submit, class: "btn btn-primary" %>
      </div>
      <br/>
      <br/>
      You can click <a href="/csv_import_sample/download/">here</a> to
      download a sample csv file.
      <br />
    </div>
  <% end %>

</div>
</div>
</div>
